    <!-- Alpine logic -->
    <script>
        function doctorUI() {
            return {
                original: [], // filled in init from DOM data
                filtered: [],
                query: '',
                specialization: '',
                sort: 'name-asc',
                view: window.innerWidth < 768 ? 'cards' : 'table',
                init() {
                    // build a lightweight index from server-rendered rows/cards
                    // We’ll scan elements with x-show="matches(...)" and read their JSON argument:
                    this.original = Array.from(document.querySelectorAll('[x-show^="matches("]'))
                        .map(el => {
                            const json = el.getAttribute('x-show').replace(/^matches\((.*)\)$/, '$1');
                            try { return JSON.parse(json); } catch { return {}; }
                        });
                    this.filtered = this.original.slice();
                },
                matches(item) {
                    // runtime filter hook used by both table rows and cards
                    const q = this.query.trim().toLowerCase();
                    const specOk = !this.specialization || (item.specialization || '').toLowerCase() === this.specialization.toLowerCase();
                    const text = [
                        item.name, item.email, item.phone, item.chamber,
                        item.specialization, item.degree, item.notes, item.available_time
                    ].filter(Boolean).join(' ').toLowerCase();
                    const qOk = !q || text.includes(q);
                    const keep = specOk && qOk;
                    // keep internal filtered list in sync for the counter
                    // (this function is called per-row; we’ll rebuild in apply() too)
                    return keep;
                },
                apply() {
                    // rebuild filtered for the counter + for future extensions
                    const q = this.query.trim().toLowerCase();
                    this.filtered = this.original.filter(item => {
                        const specOk = !this.specialization || (item.specialization || '').toLowerCase() === this.specialization.toLowerCase();
                        const text = [
                            item.name, item.email, item.phone, item.chamber,
                            item.specialization, item.degree, item.notes, item.available_time
                        ].filter(Boolean).join(' ').toLowerCase();
                        const qOk = !q || text.includes(q);
                        return specOk && qOk;
                    });

                    const by = this.sort;
                    const getFee = v => (v?.fee ? Number(v.fee) : 0);
                    this.filtered.sort((a,b) => {
                        if (by === 'name-asc') return (a.name||'').localeCompare(b.name||'');
                        if (by === 'name-desc') return (b.name||'').localeCompare(a.name||'');
                        if (by === 'fee-asc') return getFee(a) - getFee(b);
                        if (by === 'fee-desc') return getFee(b) - getFee(a);
                        return 0;
                    });
                    // no need to re-render; x-show runs per element
                }
            }
        }
    </script>
</x-app-layout>
